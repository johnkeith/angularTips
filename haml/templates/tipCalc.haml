.title-bar TipAdvisor
%div{ "ng-controller" => "tipCalcCtrl" }
  .bill-container
    .header Bill
    .number
      %input{ type: "number", "ng-model" => "bill", "ng-change" => "calculate()" }
  .tip-container
    .header Tip
    .slider
      / %input{ type: "text", "ng-model" => "tip", "ng-change" => "calculate()" }
      %input{ type: "range", min: "0", max: "100", "ng-model" => "tip", "ng-change" => "calculate()" }
  .total-container
    .header Total
    .number
      {{ billWithTip }}
  .num-btns-container
    .row-btns
      %button.num-btn 1
      %button.num-btn 2
      %button.num-btn 3
    .row-btns
      %button.num-btn 4
      %button.num-btn 5
      %button.num-btn 6
    .row-btns
      %button.num-btn 7
      %button.num-btn 8
      %button.num-btn 9
    .row-btns
      %button.num-btn 0
      %button.num-btn &nbsp;
      %button.num-btn C


